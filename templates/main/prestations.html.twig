                <button id="ajouterButton" class="button" >
                    Ajouter
                </button>
            </a>


        {% endif %}

        <table class="content-table show">
            <thead>
            <tr>
                <th>Prestations: </th>
                <th>Prix: </th>
            </tr>
            </thead>
            <tbody>

            {% for prestation in prestations|sort((a, b) => a.position <=> b.position) %}
